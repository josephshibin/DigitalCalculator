<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="37dp">

        <TextView
            android:id="@+id/textView2"
            android:textColor="?attr/headingColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voice Assitance"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_input_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:text="Input Voice" />

        <Switch
            android:id="@+id/switch_output_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:text="Output Voice" />

        <TextView
            android:id="@+id/textView3"
            android:textColor="?attr/headingColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="User Interface"
            android:textSize="15dp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/twotone_deblur_24" />

            <TextView
                android:id="@+id/theme"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="10dp"
                android:text="Theme"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/selected_theme"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/selected_theme"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:textColor="#767171"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/theme" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_color_lens_24" />

            <TextView
                android:id="@+id/accent"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="10dp"
                android:text="Accent Color"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/accent_color"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/accent_color"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:textColor="#767171"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@id/accent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
