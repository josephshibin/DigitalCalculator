<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp">

    <FrameLayout
        android:id="@+id/color_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_navyBlue"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/red_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/color_navyBlue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/navyBlue"
        app:layout_constraintEnd_toStartOf="@id/color_orange"
        app:layout_constraintStart_toEndOf="@+id/color_red"
        app:layout_constraintTop_toTopOf="@+id/color_red">

        <ImageView
            android:id="@+id/navyBlue_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/color_orange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color_navyBlue"
        app:layout_constraintTop_toTopOf="@+id/color_red">

        <ImageView
            android:id="@+id/orange_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/color_primaryPink"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/primaryPink"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_red"
        app:layout_constraintTop_toBottomOf="@id/color_red">

        <ImageView
            android:id="@+id/primaryPink_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/color_black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintEnd_toStartOf="@id/color_primaryGrey"
        app:layout_constraintStart_toEndOf="@+id/color_primaryPink"
        app:layout_constraintTop_toTopOf="@+id/color_primaryPink">

        <ImageView
            android:id="@+id/black_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/color_primaryGrey"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/primaryGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color_red"
        app:layout_constraintTop_toTopOf="@+id/color_primaryPink">

        <ImageView
            android:id="@+id/primaryGrey_check"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/check"
            app:tint="@color/white" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>